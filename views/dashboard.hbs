<h6>Dasddhbaord</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>

{{#if stories}}
    <table class="stripped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{createdAt}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            {{/each}}
        </tbody>
    </table>

{{else}}
<p>You Have Not created Any Stories</p>

{{/if}}